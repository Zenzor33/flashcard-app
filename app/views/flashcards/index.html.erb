 <%= simple_form_for("", url: flashcards_path, method: :get, 
    html: { 
      "data-turbo-frame": "results", 
      "data-turbo-action": "advance", 
      "data-controller": "form", 
      "data-action": "input->form#submit" }
    ) do |f| %>
  <div>
    <%= f.input :front, input_html: { placeholder: 'front...', value: params[:front] } %>
  </div>
  <div>
    <%= f.input :sort_by, as: :select, collection: [['Highest Accuracy', 'highest_accuracy'], ['Lowest Accuracy', 'lowest_accuracy'], ['Name', 'name']], prompt: "Sort By", selected: params[:sort_by] %>
  </div>
  <div>
    <%= f.button :submit, "Search" %>
  </div>
<% end %>





<div class="flex gap-2">
  <%= turbo_frame_tag 'results'  do%>
    <%= render partial: 'flashcards/search_results', locals: { flashcard: @flashcards } %>
  <% end %>
</div>