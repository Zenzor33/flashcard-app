<%= turbo_stream.replace "flash", partial: "layouts/flash" %>


<% @flashcards.each do |flashcard| %>
  <% if dom_id(flashcard).nil? %>
    <%= turbo_stream.append dom_id(flashcard), partial: "flashcards/line_item", locals: {flashcard: flashcard}%>
  <% else %>
    <%= turbo_stream.replace dom_id(flashcard), partial: "flashcards/line_item", locals: {flashcard: flashcard} %>
  <% end %>
<% end %>