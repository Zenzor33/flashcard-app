<%= turbo_frame_tag 'flashcard' do%>
  <div class="flex">
    <a class="bg-gray-800 text-white rounded-l-md border-r border-gray-100 py-2 hover:bg-red-700 hover:text-white px-3" 
    href="<%= @previous_flashcard ? previous_flashcard_user_deck_study_path(current_user, @deck, @previous_flashcard, current_flashcard: @flashcard) : "#" %>" data-turbo-frame="flashcard">
      <div>
        <div class="flex flex-row align-middle">
          <svg
            class="w-5 mr-2"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
              clip-rule="evenodd"
            ></path>
          </svg>
          
          <p class="ml-2">Prev</p>
        </div>
      </div>
    </a>

    
    <section>
      <a
        href="#"
        class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
      >
        <h5
          class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
        <%= @flashcard.front %>
        </h5>
        <p class="font-normal text-gray-700 dark:text-gray-400">
          Phonetics here
        </p>
      </a>
    </section>
  

    <a class="bg-gray-800 text-white rounded-r-md py-2 border-l border-gray-200 hover:bg-red-700 hover:text-white px-3"
    href="<%= next_flashcard_user_deck_study_path(current_user, @deck, @next_flashcard, current_flashcard: @flashcard) %>", data-turbo-frame="flashcard"  > 
    
      <div>
        <div class="flex flex-row align-middle">
          <span class="mr-2">Next</span>
          <svg
            class="w-5 ml-2"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </div>
      </div>
      </a>
  </div>


  <div class="flex justify-center pt-6 gap-2">
    <%= button_to 'Correct', mark_correct_user_deck_study_path(current_user, @deck), method: :post, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    <%= button_to 'Incorrect', mark_incorrect_user_deck_study_path(current_user, @deck), method: :post, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>

  <!-- UPDATE LATER -->
  <%= turbo_frame_tag 'flashcard_statistics' do%>
  <div class="flex flex-col items-center justify-center pt-6 gap-2">
    <h2>Stats</h2>
    <div class="flex">
      <div>Correct:</div>
      <p id="correct_count"> </p>
    </div>
    <div class="flex">
      <div>Incorrect:</div>
      <p id="incorrect_count"> </p>
    </div>
  </div>
  <% end %>

  <!-- UPDATE LATER -->
  <%= turbo_frame_tag "flashcard_details" do%>
    <%= link_to 'Details', '#', data: { turbo_frame: "_top"}  %>
  <% end %>
<% end %>