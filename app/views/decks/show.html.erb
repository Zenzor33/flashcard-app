<div class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow">
  <div class="px-4 py-5 sm:px-6 flex justify-center gap-3">
    <!-- Content goes here -->
    <!-- We use less vertical padding on card headers on desktop than on body sections -->
    <%= link_to 'All Cards', user_deck_path(current_user.id, @deck, category: 'all'), class: user_deck_classes('all') %> <!-- add remote: true ?-->
    <%= link_to 'New Cards', user_deck_path(current_user.id, @deck, category: 'new'), class: user_deck_classes('new') %> <!-- add remote: true ?-->
    <%= link_to 'Learning', user_deck_path(current_user.id, @deck, category: 'learning'), class: user_deck_classes('learning') %> <!-- add remote: true ?-->
    <%= link_to 'Progressing', user_deck_path(current_user.id, @deck, category: 'progressing'), class: user_deck_classes('progressing') %> <!-- add remote: true ?-->
    <%= link_to 'Mastered', user_deck_path(current_user.id, @deck, category: 'mastered'), class: user_deck_classes('mastered') %> <!-- add remote: true ?-->    
  </div>

  <!-- Flashcard Statistics by Category -->
  <%= render 'decks/stats_header' %>

  <div class="overflow-hidden rounded-lg bg-white shadow">
  <%= simple_form_for("", url: "", method: :get
      ) do |f| %>
    <div class="flex justify-center gap-2">
      <div>
        <%= f.input :front, label: false, input_html: { placeholder: 'Front...', value: params[:front] } %>
      </div>
      <div>
        <%= f.input :back, label: false, input_html: { placeholder: 'Back...', value: params[:back] } %>
      </div>
      <div class="flex align-center">
        <%= f.button :submit, "Create" %>
      </div>
    </div>
    <% end %>
  </div>


  
  <!-- Statistics displayed for each Flashcard -->
  <div class="px-4 py-5 sm:p-6">
    <!-- Content goes here -->
    <%= render 'decks/stats_body' %>
  </div>
  <!-- end -->
</div>